profile=$1
tags=$2

chmod +x stop
./stop $profile

svn sw https://218.83.175.166/svn/projects/platform/components/resource/tags/$tags .
svn info > svn.info

svn up
mvn clean package assembly:assembly 

rm -rf /opt/applications/resource-task-node
mkdir /opt/applications/resource-task-node
tar -zxvf target/resource-task-node.tar.gz -C /opt/applications/resource-task-node

cd /opt/applications/resource-task-node
chmod +x run
./run $profile

