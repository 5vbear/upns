<configuration scan="true" scanPeriod="30 seconds">

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<!-- <encoder> <pattern>%d{yyyy-MM-dd HH:mm:ssS} %5p [%c@%t]:%L - %m%n</pattern> 
			</encoder> -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ssS} %5p [%c]:%L-%m%n</pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="stdout" />
	</root>

	<logger name="com.myctu" level="debug" />
	<logger name="com.telecom" level="debug" />
	<logger name="upns.node.server.monitor" level="debug" />
	
	<!-- <logger name="org.springframework" level="debug" /> -->
</configuration>