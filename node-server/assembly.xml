<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1
	http://maven.apache.org/xsd/assembly-1.1.1.xsd">

	<id>node-server</id>
	<formats>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<includes>
				<include>run</include>
				<include>stop</include>
				<include>svn.info</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>resources</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>profile</directory>
			<outputDirectory>profile</outputDirectory>
		</fileSet>
		
		<fileSet>
			<directory>service-wrapper</directory>
			<outputDirectory>service-wrapper</outputDirectory>
		</fileSet>
		
	</fileSets>

	<dependencySets>

		<dependencySet>
			<excludes>
				<exclude>com.telecom.ctu.*:*</exclude>
				<exclude>com.myctu.platform.*:*</exclude>
			</excludes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>

		<dependencySet>
			<includes>
				<include>com.telecom.ctu.*:*</include>
				<include>com.myctu.platform.*:*</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>components</outputDirectory>
		</dependencySet>

	</dependencySets>

</assembly>